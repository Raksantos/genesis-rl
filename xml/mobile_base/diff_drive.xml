<mujoco model="diff_drive">
  <compiler angle="degree" coordinate="local"/>
  <option timestep="0.01" gravity="0 0 -9.81"/>

  <worldbody>
    <!-- corpo principal -->
    <body name="base" pos="0 0 0.1">
      <!-- caixote do robÃ´ -->
      <geom name="base_geom" type="box" size="0.25 0.18 0.05" density="500"/>

      <!-- roda esquerda -->
      <body name="left_wheel" pos="0 0.18 0">
        <joint name="left_wheel_joint" type="hinge" axis="0 1 0" damping="0.01" limited="false"/>
        <geom name="left_wheel_geom" type="cylinder" size="0.04 0.03" rgba="0 0 1 1"/>
      </body>

      <!-- roda direita -->
      <body name="right_wheel" pos="0 -0.18 0">
        <joint name="right_wheel_joint" type="hinge" axis="0 1 0" damping="0.01" limited="false"/>
        <geom name="right_wheel_geom" type="cylinder" size="0.04 0.03" rgba="1 0 0 1"/>
      </body>
    </body>
  </worldbody>

  <!-- atuadores: vamos controlar por velocidade -->
  <actuator>
    <velocity name="left_wheel_act" joint="left_wheel_joint" kv="50" ctrlrange="-10 10"/>
    <velocity name="right_wheel_act" joint="right_wheel_joint" kv="50" ctrlrange="-10 10"/>
  </actuator>
</mujoco>
